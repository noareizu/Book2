<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <%= render 'error_messages',book: @book %>
  <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title,class:"col-xs-12" %>
      <h4>Opinion</h4>
      <%= f .text_area :body,class:"col-xs-12" %>
      <%= f.submit'Update Book', class:"btn btn-info col-xs-12" %>
 <% end %>
    <%= link_to "Show" ,book_path(@book.id) %>|<%= link_to "Back" , books_path %>
</div>
</div>
