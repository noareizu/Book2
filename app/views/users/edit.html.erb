<div class="container">
  <h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'error_messages',user: @user %>
        <div class="form">
          <label for="name">Name</label>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, autofocus: true %>
        </div>

        <div class="field">
          <label for="introduction">introduction</label>
          <%= f.text_area :introduction, autofocus: true %>
        </div>

      <div class="actions">
        <%= f.submit "Update User" %>
      </div>
   <% end %>
</div>