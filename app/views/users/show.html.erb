<body>
	<div class="body">
		<div class="container">
			<%= flash[:notice] %>
			<div class="row">
				<div class="col-xs-3">
					<h2>User info</h2>
						<div class="profile-container">
						    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size:"100x100" %>
						</div>
					<table class="table">
						<tbody><tr></tr>
							<tr>
								<th>name</th>
								<th><%= @user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @user.introduction %></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<%=link_to edit_user_path(@user) do %>
							<div class="col-xs-12 btn btn-default">
							<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
							</div>
						<% end %>
					</div>

					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
						<div>
							<label>Title</label>
						    <p><%= f.text_field :title, id: :title, class:"col-xs-12" %></p>
						</div>

						<div>
							<label>Opinion</label>
							<p><%= f.text_area :body, id: :body, class:"col-xs-12" %></p>
						</div>
						<div>
							<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
						</div>
					<% end %>
				</div>
				<div class="col-xs-9">
					<h2>Books</h2>
					<table class="table table-hover">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<% @user.books.each do |book| %>
							<tr>
								<th><%=link_to user_path(@user) do %>
									<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "img/no_image.jpg", size:"40x40" %></th>
									<% end %>
								<th>
									<%=link_to book_path(book) do %>
										<%= book.title %>
									<% end %>
								</th>
								<th><%= book.body %></th>
							</tr>
						<% end %>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>